            </HBox>

        </VBox>
    </left>


    <right>
        <VBox spacing="35">
            <HBox alignment="TOP_CENTER" minWidth="500">
                <Label alignment="CENTER" style="-fx-font-weight: bold; -fx-font-size: 40; -fx-text-fill: white" text="Sign up" />
            </HBox>


            <HBox alignment="CENTER" minWidth="500" spacing="25">
                <Label minWidth="90" style="-fx-font-size: 15; -fx-text-fill: white" text="Username" />

                    <TextField minWidth="200" />
            </HBox>


            <HBox alignment="CENTER" minWidth="500" spacing="25">
                <Label minWidth="90" style="-fx-font-size: 15; -fx-text-fill: white" text="Password" />

                <PasswordField minWidth="200" />
            </HBox>

            <HBox alignment="CENTER" minWidth="500" spacing="25">
                <Label minWidth="90" style="-fx-font-size: 15; -fx-text-fill: white" text="Phone number" />
                <TextField minWidth="200" />
            </HBox>

            <HBox alignment="CENTER" minWidth="500" spacing="25">
                <Label minWidth="90" style="-fx-font-size: 15; -fx-text-fill: white" text="Email" />
                <TextField minWidth="200" />
            </HBox>

            <HBox alignment="CENTER" minWidth="500" spacing="25">
                <Label minWidth="90" style="-fx-font-size: 15; -fx-text-fill: white" text="Address" />
                <TextField minWidth="200" />
            </HBox>

            <HBox alignment="CENTER" minWidth="500" spacing="25">
                <Label minWidth="90" style="-fx-font-size: 15; -fx-text-fill: white" text="Gender" />
                <ChoiceBox minWidth="200">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Nam" />
                            <String fx:value="Ná»¯" />
                        </FXCollections>
                    </items>
                </ChoiceBox>
            </HBox>

            <HBox alignment="CENTER" minWidth="500">
                <Button alignment="CENTER" maxHeight="15" minWidth="320" style="-fx-background-color: black; -fx-text-fill: white; -fx-font-size: 15" text="Sign Up" />
            </HBox>

            <HBox alignment="CENTER" minWidth="500">
                <Label fx:id="error" />
            </HBox>

        </VBox>
    </right>


