<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane style="-fx-background-color: #333399; -fx-background-image: url('https://img.tripi.vn/cdn-cgi/image/width=700,height=700/https://gcs.tripi.vn/public-tripi/tripi-feed/img/474066oSB/hinh-nen-3d-dep-cho-may-tinh-windows-7_111406508.jpg'); -fx-background-size: 1000 600; "  minHeight="600"
            minWidth="1000"   xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.duanbanlaptop.function.LoginFunction">

    <center>

        <VBox maxHeight="460" maxWidth="450" alignment="CENTER" spacing="40" style="-fx-background-color: gray; -fx-background-color: rgba(0,0,0,0.8); -fx-background-radius: 20 ">

            <Label style="-fx-font-weight: bold; -fx-font-size: 40" layoutX="183.0" layoutY="24.0" prefHeight="52.0"
                   prefWidth="105.0" text="Login" textFill="WHITE"/>

            <HBox alignment="CENTER" spacing="15">
                <Label  style="-fx-font-size: 15" layoutX="83.0" layoutY="120.0" prefHeight="18.0" prefWidth="70.0" text="Username"
                        textFill="WHITE"/>
                <TextField fx:id="txtUsername" layoutX="157.0" layoutY="117.0" prefHeight="26.0" prefWidth="211.0"/>
            </HBox>

            <HBox alignment="CENTER" spacing="15">
                <Label style="-fx-font-size: 15" layoutX="83.0" layoutY="176.0" prefHeight="18.0" prefWidth="70.0" text="Password"
                       textFill="WHITE"/>

                <PasswordField fx:id="txtPassword"  layoutX="157.0" layoutY="172.0" prefHeight="26.0" prefWidth="211.0"/>

            </HBox>

            <VBox alignment="CENTER" spacing="20">
                <HBox alignment="CENTER" spacing="85">
                    <CheckBox fx:id="checkbox" style="-fx-font-size: 11" layoutX="83.0" layoutY="228.0" mnemonicParsing="false" prefHeight="18.0" prefWidth="106.0"
                              text="Remember me" textFill="WHITE"/>

                    <Label style="-fx-font-size: 11" layoutX="275.0" layoutY="229.0" prefHeight="18.0" prefWidth="93.0" text="Forgot password"
                           textFill="WHITE"/>
                </HBox>


                <Button  layoutX="182.0" layoutY="289.0" mnemonicParsing="false" prefHeight="36.0" minWidth="200"
                        style="-fx-background-color:#0066FF; -fx-background-radius: 90 ; -fx-text-fill: white ; -fx-font-size: 13" text="Login" onAction="#login"/>

                <Button   layoutX="182.0" layoutY="289.0" mnemonicParsing="false" prefHeight="36.0" prefWidth="106.0"
                          style="-fx-background-color:#00BB00; -fx-background-radius: 90 ; -fx-text-fill: white ; -fx-font-size: 13" text="Sign up" onAction="#transitionToSignup"/>

                <Label fx:id="bug" style="-fx-text-fill: red; -fx-font-size: 13"/>
            </VBox>
        </VBox>
    </center>
</BorderPane>